{
    "name": "balance-api",
    "version": "1.0.0",
    "description": "Simple balance micro-API",
    "main": "dist/server.js",
    "scripts": {
       "build": "tsc",
        "start": "node dist/server.js",
        "dev": "nodemon src/server.ts",
        "bundle": "esbuild src/server.ts --bundle --platform=node --target=node20 --outfile=dist/bundle.js",
        "test": "jest",
        "lint": "eslint 'src/**/*.ts'"
    },
    "dependencies": {
        "express": "^4.19.2"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.12",
        "@types/node": "^20.11.19",
        "@types/supertest": "^2.0.16",
        "esbuild": "^0.27.2",
        "eslint": "^9.39.2",
        "jest": "^29.7.0",
        "nodemon": "^3.1.11",
        "supertest": "^6.3.4",
        "ts-jest": "^29.1.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.3.3"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "testMatch": [
            "**/__tests__/**/*.test.ts"
        ]
    }
}
