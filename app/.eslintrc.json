{
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "env": {
      "node": true,
      "es2020": true,
      "jest": true
    },
    "rules": {
      "semi": ["error", "always"],
      "@typescript-eslint/no-explicit-any": "off"
    }
  }